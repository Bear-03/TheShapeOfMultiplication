{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parser": "@babel/eslint-parser", // Needed so eslint can parse static class properties (classes.js)
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"requireConfigFile": false
	},
	"rules": {
		"indent": [
			"warn",
			"tab"
		],
		"linebreak-style": [
			"warn",
			"unix"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"warn",
			"always"
		],
		"no-empty": [
			"warn",
			{
				"allowEmptyCatch": true
			}
		]
	}
}
